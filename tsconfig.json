{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "target": "esnext",
    "watch": true,
    "outDir": "build",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}